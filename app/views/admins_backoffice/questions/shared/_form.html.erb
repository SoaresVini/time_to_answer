<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= title %></h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= action %>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">

                    <% if @question.errors.any? %>
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        
                        <ul>
                            <% @question.errors.full_messages.each do |message| %>
                                <li> <%= message %> </li>
                            <% end %>
                        </ul>
                    </div>
                    <% end %>
                  
                    <%= form_with(model: [ :admins_backoffice, @question]) do |form|%>

                
                    <div class="form-group">
                        <%= form.label :description %>
                        <%= form.text_area :description, class:"form-control", placeholder:"Descrição do Assunto/Area", rows: 5 %>
                    </div>

                    <div class="form-group">
                        <%= form.label :subject %>
                        <%= form.collection_select(:subject_id, Subject.all, :id, :description, include_blank: 'Selecione um assunto') %>
                    </div>

                    <button type="submit" class="btn btn-default">Salvar</button>
                    <% end %>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>